{
  "name": "@anyproto/anytype-mcp",
  "keywords": [
    "anytype",
    "api",
    "mcp",
    "server"
  ],
  "version": "1.0.2",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:dev": "vitest watch",
    "build": "tsc -build && node scripts/build-cli.js",
    "prepare": "npm run build",
    "dev": "tsx watch scripts/start-server.ts",
    "parse-openapi": "tsx scripts/parse-openapi.ts",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"scripts/**/*.{ts,tsx}\"",
    "lint": "prettier --check \"src/**/*.{ts,tsx}\" \"scripts/**/*.{ts,tsx}\" && eslint . --ext .ts,.tsx",
    "fix-lint": "eslint . --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit"
  },
  "bin": {
    "anytype-mcp": "bin/cli.mjs"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.4.1",
    "axios": "^1.7.9",
    "form-data": "^4.0.1",
    "js-yaml": "^4.1.0",
    "mustache": "^4.2.0",
    "openapi-client-axios": "^7.5.5",
    "openapi-schema-validator": "^12.1.3",
    "openapi-types": "^12.1.3",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.33.1",
    "@types/js-yaml": "^4.0.9",
    "@types/json-schema": "^7.0.15",
    "@types/mustache": "^4.2.5",
    "@types/node": "^20.17.16",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitest/coverage-v8": "2.1.8",
    "esbuild": "^0.24.2",
    "eslint": "^9.26.0",
    "openai": "^4.80.1",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  },
  "description": "Official MCP server for Anytype API",
  "repository": {
    "type": "git",
    "url": "git@github.com:anyproto/anytype-mcp.git"
  },
  "author": "@anyproto",
  "bugs": {
    "url": "https://github.com/anyproto/anytype-mcp/issues"
  },
  "homepage": "https://github.com/anyproto/anytype-mcp#readme",
  "files": [
    "bin",
    "dist",
    "src",
    "scripts/openapi.json",
    "README.md"
  ],
  "engines": {
    "node": ">=16"
  }
}
